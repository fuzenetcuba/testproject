{% extends '@Frontend/layout.html.twig' %}

{% block title '- Register User' %}

{% block page_content %}

    <section class="inner-content">
        <div class="container">
            <div class="row">

                <div class="col-md-12">
                    <div class="ibox-content">

                        <h2 class="font-bold">Resetting password requested</h2>

                        <p>{{ 'resetting.check_email'|trans({'%email%': email}, 'FOSUserBundle') }}</p>

                        <div class="row">

                            <div class="col-lg-12">

                                <a class="text-center" href="{{ path('frontend_homepage') }}">
                                    <small>Back to home</small>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}