{% extends is_granted('ROLE_BUSINESS') ? 'BackendBundle::layout.html.twig' : 'FrontendBundle::layout.html.twig' %}


{% if not is_granted('ROLE_BUSINESS') %}
    {% block title %} {{ "System User Profile" |trans({}, 'fosuser') }} {% endblock %}
{% endif %}

{% block metatags %}
    <meta name="keywords"
          content="{{- render(controller('BackendBundle:Settings:getSettings', { 'property' : 'websiteBrand' })) -}},
    {{- 'Profile of' | trans({}, 'fosuser') ~ ' ' ~ user.username -}}
    "/>
    <meta name="description" content="
    {{- 'Profile of' | trans({}, 'fosuser') ~ ' ' ~ user.username -}}
    "/>
{% endblock %}

{% if is_granted('ROLE_BUSINESS') %}
    {% block active_users %}active{% endblock %}
    {% block page_heading_title %}
        {{ 'Profile of' | trans({}, 'fosuser') }} <b>{{ user.username }}</b>
    {% endblock %}
{% else %}
    {% block navbar %}
        {% embed '@Frontend/navbar.html.twig' %}
            {% block navbar_class '' %}
        {% endembed %}
    {% endblock %}
{% endif %}

{% block page_content %}


    {% if not is_granted('ROLE_BUSINESS') %}
        <section class="inner-content section-spaces-line">
        <div class="container">
        <div class="row m-b">
            <div class="col-lg-12 text-center">
                <div class="section-line amber-line"></div>
                <h1>{{ "System User Profile" |trans({}, 'fosuser') }} </h1>
            </div>
        </div>

        {#  Fash bag block  #}
        {% block flash_bags %}
            {#  Including the flash bags notifications  #}
            {% include '@Backend/Layout/flash_bags.html.twig' %}
        {% endblock %}
        {#  END Fash bag block  #}
    {% endif %}

    <div class="row widget-text-box no-padding">
        <div class="col-lg-4 navy-bg p-lg text-center">
            <img style="max-width: 70%; height: auto;"
                 src="{{ user.image is not null ? asset('images/users/' ~ user.image) : asset('bundles/backend/images/avatar.jpg') }}"
                 class="m-t-md img-circle circle-border m-b-md" alt="{{ user.image }}"/>
            <div class="m-b-md">
                <h1 class="font-bold no-margins">
                    {{ user.fullName }}
                </h1>
                <small>[{{ user.username }}]</small>
            </div>
        </div>
        <div class="col-lg-8 p-lg">
            <p><span class="fa fa-envelope"></span> {{ user.email }}</p>
            {% if(user.phone is not null) %}
                <p><span class="fa fa-phone"></span> {{ user.phone }}</p>
            {% endif %}
            <p><span class="fa fa-rss"></span> <span
                        class="label {{ user.subscribed ? 'label-primary' : 'label-default' }}">{{ user.subscribed ? 'Email subscribed' | trans({}, 'fosuser') : 'Not email subscribed' | trans({}, 'fosuser') }}</span>
            </p>
            <div class="m-t-lg">
                <a class="btn btn-success" role="button" href="{{ path('fos_user_profile_edit') }}">
                    <span class="fa fa-pencil"></span> {{ 'Edit profile' | trans({}, 'fosuser') }}
                </a>
                <a class="btn btn-primary" role="button" href="{{ path('fos_user_change_password') }}">
                    <span class="fa fa-key"></span> {{ 'change_password.submit' | trans({}, 'FOSUserBundle') }}
                </a>
            </div>
        </div>
    </div>

    {% if not is_granted('ROLE_BUSINESS') %}
        </div>
        </section>
    {% endif %}
{% endblock %}
