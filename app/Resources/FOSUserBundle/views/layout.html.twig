{% extends "::base.html.twig" %}


{% block custom_css %}
    <link rel="stylesheet" href="{{ asset('bundles/backend/css/bootstrap.min.css') }}" type="text/css"/>
    <link rel="stylesheet" href="{{ asset('bundles/backend/font-awesome/css/font-awesome.min.css') }}" type="text/css"/>

    {#  Old styles  #}
    <link rel="stylesheet" href="{{ asset('bundles/backend/css/sb-admin.css') }}" type="text/css"/>
    <link rel="stylesheet" href="{{ asset('bundles/backend/css/plugins/morris.css') }}" type="text/css"/>
{% endblock %}


{% block body %}
    <div id="wrapper">

        {% block navigator %}
            <!-- Navigation -->
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('backend_homepage') }}">Uploader</a>
                </div>
                <!-- Top Menu Items -->
                <ul class="nav navbar-right top-nav">
                    <li>
                        <a href="{#{ path('frontend_homepage') }#}" target="_blank"><span class="fa fa-chevron-left"></span> View Website</a>
                    </li>
                    <li class="dropdown">
                        {% if app.user.id is defined %}
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> {{ app.user.username }}
                                <b class="caret"></b>
                            </a>
                        {% endif %}
                        <ul class="dropdown-menu" role="menu">
                            {% if app.user.id is defined %}
                                <li>
                                    <a href="{{ path('fos_user_profile_show') }}"><i class="fa fa-fw fa-user"></i> Profile</a>
                                </li>
                                <li>
                                    <a href="{{ path('fos_user_change_password') }}"><i class="fa fa-fw fa-key"></i> Password</a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                                </li>
                            {% endif %}
                        </ul>
                    </li>
                </ul>
                <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav side-nav">
                        <li class="{% block active_dashboard %}{% endblock %}">
                            <a href="{{ path('backend_homepage') }}"><i class="fa fa-fw fa-dashboard"></i> Dashboard</a>
                        </li>
                        <li class="{% block active_users %}{% endblock %}">
                            <a href="{{ path('user') }}"><i class="fa fa-fw fa-user"></i> Users</a>
                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </nav>
        {% endblock %}


        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">

                            {% block title_post %}
                                Dashboard <small>Statistics Overview</small>
                            {% endblock %}
                        </h1>
                    </div>
                </div>
                <!-- /.row -->

                {% block flash_bags %}
                    <!-- bloque de mensajes FlashBag -->
                    {% for type, messages in app.session.flashBag.all %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type|replace({'fos_user_': ""}) }} fade in">
                                <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
                                <span class="glyphicon glyphicon-remove-sign"></span>
                                {{ message|trans({}, 'FOSUserBundle')|raw }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    {% for type, messages in app.session.flashBag.all %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type|replace({'fos_user_': ""}) }} fade in">
                                <button class="close" aria-hidden="true" data-dismiss="alert" type="button">×</button>
                                <span class="glyphicon glyphicon-remove-sign"></span>
                                {{ message|trans()|raw }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    <!-- FIN - bloque de mensajes FlashBag -->
                {% endblock %}

                {% block content_post %}

                {% endblock %}
                
                <!-- Block for FOSUserBundle actions -->
                {% block fos_user_content %}
                
		{% endblock %}
            </div>

            {% block footer %}

            {% endblock %}
        </div>
    {% endblock %}

    {% block custom_js %}
        <script src="{{ asset('bundles/backend/js/jquery-1.11.0.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/backend/js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/backend/js/jquery.highlight.js') }}" type="text/javascript"></script>
        <!--
        <script src="{#{ asset('bundles/backend/js/plugins/morris/morris.min.js') }#}" type="text/javascript"></script>
        <script src="{#{ asset('bundles/backend/js/plugins/morris/morris-data.js') }#}" type="text/javascript"></script>
        <script src="{#{ asset('bundles/backend/js/plugins/morris/raphael.min.js') }#}" type="text/javascript"></script>
        -->

        <script type="text/javascript" >
            jQuery(function($) {
                $('table th input:checkbox').on('click', function() {
                    var that = this;
                    $(this).closest('table').find('tr > td:first-child input:checkbox')
                            .each(function() {
                                this.checked = that.checked;
                                $(this).closest('tr').toggleClass('selected');
                            });
                });
            });
        </script>
    {% endblock %}


    {% block inline_js %}
    {% endblock %}