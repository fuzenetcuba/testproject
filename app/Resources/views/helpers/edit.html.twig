        {% block page_content %}

            {{ form_start(edit_form, {'attr': {'class':'form-horizontal'}}) }}



            <div class="form-group{% if(edit_form.date.vars['errors']|length > 0) %} {{ ' has-error' }} {% endif %}">
                <label for="" class="col-md-2 control-label">{{ form_label(edit_form.date) }}</label>

                <div class="col-md-6">
                    <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar"></span>
                                </span>
                        {{ form_widget(edit_form.date, { 'attr': {'class' : 'form-control datepicker'}}) }}
                        {% if edit_form.date.vars['errors']|length > 0 %}
                            <ul class="message">
                                {% for error in edit_form.date.vars['errors'] %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="hr-line-dashed"></div>



            <div class="form-group{% if(edit_form.time.vars['errors']|length > 0) %} {{ ' has-error' }} {% endif %}">
