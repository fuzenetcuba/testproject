                <span class="glyphicon glyphicon-chevron-up"></span>
            </a>
            Helpers creation
        {% endblock %}

        {% block page_content %}

            {{ form_start(form, {'attr': {'class':'form-horizontal'}}) }}



            <div class="form-group{% if(form.date.vars['errors']|length > 0) %} {{ ' has-error' }} {% endif %}">
                <label for="" class="col-md-2 control-label">{{ form_label(form.date) }}</label>

                <div class="col-md-6">
                    <div class="input-group">
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar"></span>
                                </span>
                        {{ form_widget(form.date, { 'attr': {'class' : 'form-control datepicker'}}) }}
                        {% if form.date.vars['errors']|length > 0 %}
                            <ul class="message">
                                {% for error in form.date.vars['errors'] %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="hr-line-dashed"></div>



            <div class="form-group{% if(form.time.vars['errors']|length > 0) %} {{ ' has-error' }} {% endif %}">
