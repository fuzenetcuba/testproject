{% extends 'BackendBundle::layout.html.twig' %}

{% block custom_css %}
    {{ parent() }}


    <!-- datepicker3 Styles -->
    <link rel="stylesheet"
          href="{{ asset('bundles/backend/css/plugins/datapicker/datepicker3.css') }}"
          type="text/css"/>
    <!-- clockpicker Styles -->
    <link rel="stylesheet"
          href="{{ asset('bundles/backend/css/plugins/clockpicker/clockpicker.css') }}"
