        {% block page_content %}

    <div>
        <span class="col-sm-2"><b>Total items: </b> {{ entities.getTotalItemCount }}</span>

        <div class="col-sm-10 form-group form-inline text-right">
            <form name="find-form" action="{{ path('post_find') }}" method="post">
                <div class="input-group">
                    <input id="find-form-text" class="form-control" autofocus="on" name="find-form-text"
                           autocomplete="off"
                           type="text" placeholder="Text to find..."/>
                        <span class="input-group-btn">
                            <button type="submit" name="find-form-send" value="sending" class="btn btn-primary">Find
                            </button>
                        </span>
                </div>
            </form>
        </div>
    </div>

    <form id="batch_action_form" action="{{ path('post_batch') }}" method="post">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th><input id="checkbox-header" type="checkbox" class="i-checks"/></th>

                                    <th class="text-navy">
                        {{ knp_pagination_sortable(entities, 'Id', 'e.id') }}
                        {% if entities.isSorted('e.id') %}
                        <span class="fa fa-sort"></span>
                        {% endif %}
                    </th>
                                    <th class="text-navy">
                        {{ knp_pagination_sortable(entities, 'Title', 'e.title') }}
                        {% if entities.isSorted('e.title') %}
                        <span class="fa fa-sort"></span>
                        {% endif %}
                    </th>
                                    <th class="text-navy">
                        {{ knp_pagination_sortable(entities, 'Route', 'e.route') }}
                        {% if entities.isSorted('e.route') %}
                        <span class="fa fa-sort"></span>
                        {% endif %}
                    </th>
                                    <th class="text-navy">
                        {{ knp_pagination_sortable(entities, 'Content', 'e.content') }}
                        {% if entities.isSorted('e.content') %}
                        <span class="fa fa-sort"></span>
                        {% endif %}
                    </th>
                                    <th class="text-navy">
                        {{ knp_pagination_sortable(entities, 'Published', 'e.published') }}
                        {% if entities.isSorted('e.published') %}
                        <span class="fa fa-sort"></span>
                        {% endif %}
                    </th>
                                    <th class="text-navy">
                        {{ knp_pagination_sortable(entities, 'Createdat', 'e.createdAt') }}
                        {% if entities.isSorted('e.createdAt') %}
                        <span class="fa fa-sort"></span>
                        {% endif %}
                    </th>
                                    <th class="text-navy">
                        {{ knp_pagination_sortable(entities, 'Updatedat', 'e.updatedAt') }}
                        {% if entities.isSorted('e.updatedAt') %}
                        <span class="fa fa-sort"></span>
                        {% endif %}
                    </th>
                                    <th class="text-navy">
                        {{ knp_pagination_sortable(entities, 'Metatitle', 'e.metaTitle') }}
                        {% if entities.isSorted('e.metaTitle') %}
                        <span class="fa fa-sort"></span>
                        {% endif %}
                    </th>
                                    <th class="text-navy">
                        {{ knp_pagination_sortable(entities, 'Metakeywords', 'e.metaKeywords') }}
                        {% if entities.isSorted('e.metaKeywords') %}
                        <span class="fa fa-sort"></span>
                        {% endif %}
                    </th>
                                    <th class="text-navy">
                        {{ knp_pagination_sortable(entities, 'Metadescription', 'e.metaDescription') }}
                        {% if entities.isSorted('e.metaDescription') %}
                        <span class="fa fa-sort"></span>
                        {% endif %}
                    </th>
                                    <th class="text-navy">
                        {{ knp_pagination_sortable(entities, 'Optionalmetas', 'e.optionalMetas') }}
                        {% if entities.isSorted('e.optionalMetas') %}
                        <span class="fa fa-sort"></span>
                        {% endif %}
                    </th>
                                    <th class="text-navy">
                        {{ knp_pagination_sortable(entities, 'Customcss', 'e.customCss') }}
                        {% if entities.isSorted('e.customCss') %}
                        <span class="fa fa-sort"></span>
                        {% endif %}
