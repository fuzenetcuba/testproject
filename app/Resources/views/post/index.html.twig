            </tr>
            </thead>

            <tbody>
            {% for entity in entities %}
            <tr>
                <td>
                    <input type="checkbox" class="i-checks" value="{{ entity.id }}"
                           name="batch_action_checkbox[]"/>
                </td>

                                    
