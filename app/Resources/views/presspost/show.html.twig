{% extends 'BackendBundle::layout.html.twig' %}{% block active_presspost %}active{% endblock %}{% block page_heading_title %}
    <a class="btn btn-default navbar-btn" href="{{ path('press') }}" >
        <span class="glyphicon glyphicon-chevron-up"></span>
    </a>
    {{ 'Press Post data' | trans({}, 'press')}}
{% endblock %}{% block page_content %}
    <dl class="dl-horizontal">
        <tbody>
        <dt>Id</dt>
        <dd>{{ entity.id }}</dd>
        <div class="hr-line-dashed"></div>
        <dt>{{ 'Title' | trans({}, 'press') }}</dt>
        <dd>{{ entity.title }}</dd>
        <div class="hr-line-dashed"></div>
        <dt>{{ 'Publication' | trans({}, 'press') }}</dt>
        <dd>{{ entity.author }}</dd>
        <div class="hr-line-dashed"></div>
        <dt>{{ 'Published Date' | trans({}, 'press') }}</dt>
        <dd>{{ entity.createdOn | date('d/m/Y') }}</dd>
        <div class="hr-line-dashed"></div>
        {% if entity.image %}

            <dt>{{ 'Image' | trans({}, 'press') }}</dt>
            <dd>
                <img src="{{ asset('images/press/' ~ entity.image) }}" alt="{{ entity.title }}">
            </dd>
            <div class="hr-line-dashed"></div>
        {% endif %}
        <dt>{{ 'Video' | trans({}, 'press') }}</dt>
        <dd>
            <div class="col-md-6">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item"
                            src="//{{ entity.video | replace({'http://':'', 'https://': '', 'watch' : 'embed', '?v=': '/'}) }}?showinfo=0"></iframe>
                </div>
            </div>
        </dd>
        <div class="hr-line-dashed"></div>
        <dt>{{ 'Content' | trans({}, 'press') }}</dt>
        <dd>{{ entity.text | raw }}</dd>
        <div class="hr-line-dashed"></div>
        </tbody>
    </dl>
    <div class="form-group">
        <div class="col-md-2 text-right">
            <a class="btn btn-success" href="{{ path('press') }}">
                <span class="glyphicon glyphicon-chevron-left"></span>
                Back to the list
            </a>
        </div>
        <div class="col-md-10">

            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-primary"
                   href="{{ path('press_edit', { 'id': entity.id }) }}">
                    <span class="fa fa-pencil"></span>
                    Edit
                </a>

                <a class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">
                    <span class="fa fa-remove"></span>
                    Delete
                </a>
            {% endif %}

        </div>
    </div>


    <div class="modal inmodal" id="modalDelete" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content animated bounceInRight">
                <div id="modal-title" class="modal-header red-bg">
                    <button type="button" class="close" data-dismiss="modal"><span
                                aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <i class="fa fa-exclamation-triangle modal-icon text-white"></i>
                    <h4 class="modal-title">Attention!!!</h4>
                </div>
                <div id="modal-content" class="modal-body">
                    <strong>Are you sure you want to delete this data?</strong>
                </div>
                <div class="modal-footer">
                    <form action="{{ path('press_delete', { 'id': entity.id }) }}"
                          name="form-delete" method="post">
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        <button id="modal-btn" type="submit" class="btn btn-danger" name="presspost-id"
                                value="{{ entity.id }}">
                            <span class="glyphicon glyphicon-ok"></span> Save changes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}