                <div class="col-md-10">

                    {{ form_widget(edit_form.submit, { 'attr': { 'class' : 'btn btn-primary btn-small', }}) }}

                    <a class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">
                        <span class="fa fa-remove"></span>
                        {{ 'Delete' | trans({}, 'generalbackend') }}
                    </a>

                </div>
