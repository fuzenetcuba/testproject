<!DOCTYPE html>
<html lang="
        {%- if app.request.get('_locale') == 'en' -%}
        {{- 'en' -}}
        {%- elseif app.request.get('_locale') == 'es' -%}
        {{- 'es' -}}
        {%- endif -%}
        ">

<head>
    <title>Plaza Mariachi | PDF Brands Data</title>

    {#<!-- Bootstrap Styles -->#}
    <link rel="stylesheet" href="{{ absolute_url(asset('bundles/backend/css/bootstrap-only-css.css')) }}"
          type="text/css"/>
    {#<link rel="stylesheet" href="{{ absolute_url(asset('bundles/backend/css/bootstrap.min.css')) }}" type="text/css"/>#}
    <!-- Template Styles -->
    <link rel="stylesheet" href="{{ absolute_url(asset('bundles/backend/css/style.css')) }}" type="text/css"/>
    <!-- PDF Candidate Styles -->
    {#<link rel="stylesheet" href="{{ absolute_url(asset('bundles/backend/css/pdfCandidate.css')) }}" type="text/css"/>#}
    <style type="text/css">
        @media print {
            @page {
                size: landscape
            }
        }

        @media print {
            * {
                font-size: 7pt !important;
            }
        }

        span.checked:before {
            content: url("data:image/gif;base64,R0lGODlhCgAKAJEAAAAAAP///////wAAACH5BAEAAAIALAAAAAAKAAoAAAISlG8AeMq5nnsiSlsjzmpzmj0FADs=");
        }
    </style>
</head>

<body>

<div class="white-bg">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th class="text-navy">
                {{ 'Name' | trans({}, 'businessbackend') }}
            </th>
            <th class="text-navy">
                {{ 'Email' | trans({}, 'businessbackend') }}
            </th>
            <th class="text-navy">
                {{ 'Phone' | trans({}, 'businessbackend') }}
            </th>
            <th class="text-navy">
                {{ 'Website' | trans({}, 'businessbackend') }}
            </th>
            <th class="text-navy">
                {{ 'Categories' | trans({}, 'businessbackend') }}
            </th>
            <th class="text-navy">
                Logo
            </th>
        </tr>
        </thead>

        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>

                <td>{{ entity.email }}</td>

                <td>{{ entity.phone }}</td>

                <td>
                    {% if entity.website %}
                        {{ entity.website|split("://")[1] }}
                    {% endif %}
                </td>

                <td>
                    {% for category in entity.categories %}
                        {{ category }}<br/>
                    {% endfor %}
                </td>

                <td>
                    <img class="img-responsive" style="width: 50px; height: auto;"
                         src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('images/business/' ~ entity.logo) }}"
                         alt="{{ entity.logo }}"/>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="6">
                    {{ 'There are not entries' | trans({}, 'generalbackend') }}...
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</body>