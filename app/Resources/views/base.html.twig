<!DOCTYPE html>
<html lang="
        {%- if app.request.get('_locale') == 'en' -%}
        {{- 'en' -}}
        {%- elseif app.request.get('_locale') == 'es' -%}
        {{- 'es' -}}
        {%- endif -%}
        ">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="theme-color" content="#ffffff">

    <title>Plaza Mariachi | {% block title %} {{ 'Welcome' | trans({}, 'general') }}!{% endblock %}</title>

    <!-- Meta tags for geo locations -->
    <meta name="geo.position" content=”36.084905;-86.729550" />
    <meta name="geo.placename" content="3955 Nolensville Pike, Nashville, TN 37211" />
    <meta name="geo.region" content=”US-TN" />

    <!-- Open Graph tags for Facebook Share button -->
    <meta property="og:url"           content="http://plazamariachi.com" />
    <meta property="og:type"          content="website" />
    <meta property="og:title"         content="{{- render(controller('BackendBundle:Settings:getSettings', { 'property' : 'websiteBrand' })) -}}" />
    <meta property="og:description"   content="{{- render(controller('BackendBundle:Settings:getSettings', { 'property' : 'textAbout' })) -}}" />
    <meta property="og:image"         content="{{ app.request.getSchemeAndHttpHost() ~ asset('images/settings/' ~ render(controller('BackendBundle:Settings:getSettings', { 'property' : 'websiteBanner' }))) }}" />


    {% block metatags %}
    {% endblock %}

    {% block stylesheets %}
    {% endblock %}

    {% block custom_css %}
    {% endblock %}

    {% block inline_css %}
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body {% block body_properties %}{% endblock %}>

{% block body %}

    {% block fos_user_content %}{% endblock %}

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
{% endblock %}

{% block custom_js %}
{% endblock %}

{% block inline_js %}
{% endblock %}

</body>
</html>
