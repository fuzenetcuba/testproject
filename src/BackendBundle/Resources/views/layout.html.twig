        $(document).ready(function () {
            // Set idle time
            $(document).idleTimer(3600000);
        });

        $(document).on("idle.idleTimer", function (event, elem, obj) {
            //  Logout of app
            window.location.href = Routing.generate('fos_user_logout_ajax');
