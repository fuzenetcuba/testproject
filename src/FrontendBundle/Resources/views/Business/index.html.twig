{% extends '@Frontend/layout.html.twig' %}

{% block title '- Businesses' %}

{% block navbar %}
    {% embed '@Frontend/navbar.html.twig' %}
        {% block navbar_class 'navbar-scroll' %}
    {% endembed %}
{% endblock %}

{% block javascript %}
    <script src="{{ asset('bundles/frontend/js/widgets.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/backend/css/plugins/select2/select2.min.css') }}">
{% endblock %}

{% block content %}
    <section class="inner-content">
        <div class="container">
            <div class="row filter-deals">
                <div class="col-sm-6">
                    <h4>FILTER BUSINESSES BY:</h4>
                    <div class="col-sm-6">
                        <select name="categories" class="select2" data-placeholder="ALL CATEGORIES">
                            <option value=""></option>
                            <option value="1">first</option>
                            <option value="2">two</option>
                            <option value="3">third</option>
                            <option value="4">fourth</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <select name="stores" class="select2" data-placeholder="ALL STORES">
                            <option value=""></option>
                            <option value="1">first</option>
                            <option value="2">two</option>
                            <option value="3">third</option>
                            <option value="4">fourth</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-6 text-right">
                    <h4>SORT BUSINESSES BY:</h4>
                    <div class="btn-group">
                        <button class="btn btn-white" type="button">ENDING SOON</button>
                        <button class="btn btn-info" type="button">NEW DEALS</button>
                    </div>
                </div>
            </div>

            <div class="row deal-list">
                <div class="col-sm-12">
                    {% for business in businesses %}
                        <div class="col-sm-4 text-center">
                            <h3>{{ business.name | upper }}</h3>
                            <p>AT {{ business.name | upper }}</p>
                            <div class="container-image business-image">
                                <img class="center-height business-image" src="{{ asset('images/business/' ~ business.logo) }} "/>
                            </div>
                            <p><a class="btn btn-info" href="{{ path('business_details', {'slug' : business.slug}) }}"
                                  role="button">View Business</a></p>
                        </div>
                    {% endfor%}
                </div>
            </div>

            <div class="row text-center">
                {{ knp_pagination_render(businesses) }}
            </div>
        </div>
    </section>
{% endblock %}