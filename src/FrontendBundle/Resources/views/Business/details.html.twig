{% extends '@Frontend/layout.html.twig' %}

{% block title '- ' ~ business.name %}

{% block page_content %}
    <section class="inner-content section-spaces">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 text-center">
                    <img class="img-responsive" src="{{ asset('images/business/' ~ business.logo) }}">
                </div>
                <div class="col-sm-6">
                    <h1>{{ business.name | upper }}</h1>
                    <hr/>

                    <span class="business-info">
                        <ul class="list-unstyled">
                            <li><i class="fa fa-clock-o"></i> {{ "9:00am to 6:00pm" }}</li>
                            <li>
                                <i class="fa fa-globe"></i>
                                <a target="_blank" href="http://{{ "www.business.com" }}">
                                    {{ "www.business.com" }}
                                </a>
                            </li>
                            <li><i class="fa fa-phone"></i> {{ business.phone }}</li>
                            <li>
                                <i class="fa fa-envelope"></i>
                                <a href="mailto:{{ "business.mail@host.com" }}">
                                    {{ "business.mail@host.com" }}
                                </a>
                            </li>
                            <li>
                                <i class="fa fa-facebook-official"></i>
                                <a href="{{ business.socialMedia }}">
                                    {{ business.socialMedia }}
                                </a>
                            </li>
                            <li>
                                <p class="text-muted-strong">
                                    <i class="fa fa-map-marker"></i>
                                    <a class="btn btn-xs btn-blue" href="#">
                                        View on Mall Map
                                    </a>
                                    - The business is located in the 2nd floor, on the right side of the stairs.
                                </p>
                            </li>
                            <li><i class="fa fa-tags"></i> {{ business.categories | join(', ') }}</li>
                        </ul>
                    </span>

                    <p class="text-muted-strong">{{ business.description | nl2br }}</p>

                    <ul class="list-inline pull-right">
                        <li>
                            <a href="http://twitter.com/intent/tweet?status=[TITLE]+[URL]" data-toggle="tooltip"
                               title="Tweet this business" class="btn btn-circle-regular btn-social-icon btn-twitter"
                               onclick="javascript:this.href=this.href.replace(/\[TITLE\]/, document.title).replace(/\[URL\]/,
                                window.location);window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,' +
                                'scrollbars=yes,height=600,width=600');return false;">
                                <span class="fa fa-twitter"></span>
                            </a>
                        </li>
                        <li>
                            <a href="http://www.facebook.com/share.php?u=[URL]&title=[TITLE]" data-toggle="tooltip"
                               title="Share this business" class="btn btn-circle-regular btn-social-icon btn-facebook"
                               onclick="javascript:this.href=this.href.replace(/\[TITLE\]/, document.title).replace(/\[URL\]/,
                                window.location);window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,' +
                                'scrollbars=yes,height=600,width=600');return false;">
                                <span class="fa fa-facebook"></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section class="section-spaces-line gray-bg">
        {% if business.deals | length > 0 %}
            <div class="row business-deals">
                <div class="container">
                    <div class="row m-b-lg">
                        <div class="col-lg-12 text-center">
                            <div class="section-line amber-line"></div>
                            <h1>Active Deals</h1>

                            {#<p>Find and win with our best deals of your interests</p>#}
                        </div>
                    </div>

                    <div class="carousel carousel-adjusted slide" id="myCarousel">
                        <div class="carousel-inner">
                            {% for deal in business.deals %}
                                <div class="item {% if loop.first %}active{% endif %} ">
                                    <div class="col-sm-3 text-center">
                                        <h3>{{ deal.name | upper }}</h3>
                                        <p>AT {{ deal.business.name | upper }}</p>
                                        <p>ENDS: {{ deal.endsAt | date('m/d/Y') }}</p>
                                        <div class="container-image">
                                            <img class="center-height"
                                                 src="{{ asset('images/deals/' ~ deal.image) }} "/>
                                        </div>
                                        <p>
                                            <a class="btn btn-amber"
                                               href="{{ path('deal_details', {'slug' : deal.slug}) }}" role="button">
                                                View Deal
                                            </a>
                                        </p>
                                        {{ loop.last ? '' : '<p class="visible-xs m-b-xl"></p>' }}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev"><i
                                    class="glyphicon glyphicon-chevron-left"></i></a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next"><i
                                    class="glyphicon glyphicon-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        {% endif %}

        {#<div class="row">#}
        {#<h2>ACTIVE DEALS</h2>#}
        {#{% for deal in business.deals %}#}
        {#<div class="col-sm-4 text-center">#}
        {#<h3>{{ deal.name | upper }}</h3>#}
        {#<p>AT {{ deal.business.name | upper }}</p>#}
        {#<p>ENDS: {{ deal.endsAt | date('m/d/Y') }}</p>#}
        {#<div class="container-image">#}
        {#<img class="center-height" src="{{ asset('images/deals/' ~ deal.image) }} "/>#}
        {#</div>#}
        {#<p><a class="btn btn-info" href="{{ path('deal_details', {'slug' : deal.slug}) }}" role="button">View Deal</a></p>#}
        {#</div>#}
        {#{% endfor%}#}
        {#</div>#}
    </section>

    <section class="section-spaces-line">
        <div class="container related-businesses">
            {% if related | length > 0 %}
                <div class="container">
                    <div class="row m-b-lg">
                        <div class="col-lg-12 text-center">
                            <div class="section-line pink-line"></div>
                            <h1>Related Businesses</h1>

                            {#<p>Find and win with our best deals of your interests</p>#}
                        </div>
                    </div>
                    <h2></h2>
                    {% for item in related %}
                        <div class="col-sm-3">
                            <div class="ibox">
                                <div class="ibox-content product-box">

                                    <div class="product-imitation container-image">
                                        <img class="center-height"
                                             src="{{ asset('images/business/' ~ item.logo) }}">
                                    </div>
                                    <div class="product-desc">
                                        {#<span class="product-price">#}
                                        {#$10#}
                                        {#</span>#}
                                        {#<small class="text-muted">Category</small>#}
                                        <a href="{{ path('business_details', {'slug':item.slug}) }}"
                                           class="product-name">{{ item.name }}</a>

                                        <div class="small m-t-xs">
                                            {{ item.description | truncate(200, true) }}
                                        </div>
                                        <div class="m-t text-center">
                                            <a href="{{ path('business_details', {'slug':item.slug}) }}"
                                               class="btn btn-xs btn-outline btn-pink">View business
                                                <i class="fa fa-long-arrow-right"></i> </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}

{% block inline_js %}
    <script type="text/javascript">

        $('.carousel .item').each(function () {
            var next = $(this).next();
            if (!next.length) {
                next = $(this).siblings(':first');
            }

            next.children(':first-child').clone().appendTo($(this));

            for (var i = 0; i < 2; i++) {
                next = next.next();
                if (!next.length) {
                    next = $(this).siblings(':first');
                }

                next.children(':first-child').clone().appendTo($(this));
            }
        });
    </script>
{% endblock %}