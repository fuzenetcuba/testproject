{% extends '@Frontend/layout.html.twig' %}

{% block title '- Deals' %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('bundles/frontend/js/sticky_filter.js') }}"></script>
{% endblock %}

{% block content %}
    <section class="inner-content section-spaces-line">
        <div class="container">
            <div class="row filter-deals hidden-print">
                <div class="container">
                    <div class="col-sm-6">
                        <form action="{{ path('deals') }}" method="post">
                            <h4>FILTER DEALS BY:</h4>
                            <div class="col-sm-8 col-md-6">
                                {{ form_widget(form.business) }}
                            </div>
                            <div class="col-sm-4 col-md-6">
                                <button type="submit"
                                        class="btn btn-blue btn-sm-block">
                                    <i class="fa fa-search"></i> &nbsp;FILTER
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-5 col-sm-1 col-sm-5 text-right-md">
                        <div class="m-l">
                            <h4>SORT DEALS BY:</h4>
                            <div class="btn-group">
                                <a href="{{ path('deals', {
                                    'order': constant('BackendBundle\\Model\\SortingMode::SORT_ENDING_SOON')}) }}"
                                   class="btn btn-white
                                {% if app.request.get('order') ==  constant('BackendBundle\\Model\\SortingMode::SORT_ENDING_SOON') %}active{% endif %}"
                                   type="button">ENDING SOON</a>
                                <a href="{{ path('deals', {
                                    'order': constant('BackendBundle\\Model\\SortingMode::SORT_NEW_DEALS')}) }}"
                                   class="btn btn-white
                                {% if app.request.get('order') ==  constant('BackendBundle\\Model\\SortingMode::SORT_NEW_DEALS') %}active{% endif %}"
                                   type="button">NEW DEALS</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1 pull-right">
                        <div class="print-button m-l m-t-xs m-r pull-right">
                            <button class="btn btn-link btn-sm-block"
                            onclick="print();">
                                <i class="fa fa-print"></i>
                            </button>
                        </div>
                        <div class="m-l m-t-xs m-r pull-right">
                            <button class="hide-filters btn btn-link btn-sm-block">
                                <i class="fa fa-chevron-up"></i>
                            </button>
                        </div>
                    </div>

                </div>
            </div>

            <div class="row deal-list hidden-print">
                <div class="col-sm-12">
                    {% for deal in deals %}
                        <div class="col-sm-4 text-center">
                            <h3>{{ deal.name | upper }}</h3>
                            <p>AT {{ deal.business.name | upper }}</p>
                            <p>ENDS: {{ deal.endsAt | date('m/d/Y') }}</p>
                            <div class="container-image">
                                <img class="center-height" src="{{ asset('images/deals/' ~ deal.image) }} "/>
                            </div>
                            <p><a class="btn btn-amber" href="{{ path('deal_details', {'slug' : deal.slug}) }}"
                                  role="button">View Deal</a></p>
                        </div>
                    {% else %}
                        <div class="alert alert-danger">
                            No deals matching your criterias were found
                        </div>
                    {% endfor %}
                </div>
            </div>
            {# Content visible only for print view #}
            <div class="print-view visible-print">
                <div class="row">
                    <img src="{{ asset('bundles/frontend/img/plaza_mariachi.png') }}"
                         alt="Plaza Mariachi Music City"
                         class="print-brand m-l"/>
                </div>
                <h1 class="print-title">Deals List of Plaza Mariachi</h1>
                <div class="row print-deal-list">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>IMAGE</th>
                            <th>NAME</th>
                            <th>DESCRIPTION</th>
                            <th>BUSINESS</th>
                            <th>START DATE</th>
                            <th>END DATE</th>
                            <th>POINTS</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for deal in deals %}
                            <tr>
                                <td>
                                    <div class="print-container-image">
                                        <img class="center-height"
                                             src="{{ asset('images/deals/' ~ deal.image) }} "/>
                                    </div>
                                </td>
                                <td>
                                    {{ deal.name | upper }}
                                </td>
                                <td>
                                    {{ deal.description }}
                                </td>
                                <td>
                                    {{ deal.business.name }}
                                </td>
                                <td>
                                    {{ deal.startsAt|date("Y, d M") }}
                                </td>
                                <td>
                                    {{ deal.endsAt|date("Y, d M") }}
                                </td>
                                <td>
                                    {{ deal.points ~ " points" }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">
                                    No deals matching your criterias were found...
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>


            <div class="row text-center hidden-print">
                {{ knp_pagination_render(deals) }}
            </div>
        </div>
    </section>
{% endblock %}